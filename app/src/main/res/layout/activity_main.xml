<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/numbers_BTN_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
            </CheckBox>

            <EditText
                android:id="@+id/numbers_TXT_main"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="2"
                android:background="#45555555"
                android:hint="Numbers"
                android:maxLines="1" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/pw_BTN_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
            </CheckBox>

            <EditText
                android:id="@+id/pw_TXT_main"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="2"
                android:background="#45555555"
                android:hint="Password"
                android:maxLines="1" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/phone_BTN_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
            </CheckBox>

            <EditText
                android:id="@+id/phone_TXT_main"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="2"
                android:background="#45555555"
                android:hint="Phone"
                android:maxLines="1" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/words_BTN_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
            </CheckBox>

            <EditText
                android:id="@+id/words_TXT_main"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="2"
                android:background="#45555555"
                android:hint="Words"
                android:maxLines="1" />

        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/validate_BTN_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:text="VALIDATE" />

</RelativeLayout>